<script>
    document.addEventListener('calendarAdded', (event) => {
      const calendars = event.detail;
  
      const addReservationButton = document.getElementById('add-reservation-button');
  
      // TODO: move to a modal
      addReservationButton.addEventListener('click', (event) => {
        event.preventDefault();
        
        calendars.forEach(calendar => {
            calendar.addEvent({
                title: "Arya y Dustin",
                start: new Date('2024-09-04'),
                end: new Date('2024-09-06'),
                allDay: true
            }, true);
        });
      });
    });
  </script>
