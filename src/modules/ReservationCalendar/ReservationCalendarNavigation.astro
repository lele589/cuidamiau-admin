  <script>
    document.addEventListener('calendarAdded', (event) => {
      const calendars = event.detail; // Obtén el array de instancias de calendarios
  
      const prevButton = document.getElementById('prev-button');
      const nextButton = document.getElementById('next-button');
  
      // Agregar eventos de clic para los botones
      prevButton.addEventListener('click', (event) => {
        event.preventDefault(); // Evitar el comportamiento por defecto del enlace
        calendars.forEach(calendar => calendar.prev()); // Avanzar al día anterior en todos los calendarios
      });
  
      nextButton.addEventListener('click', (event) => {
        event.preventDefault(); // Evitar el comportamiento por defecto del enlace
        calendars.forEach(calendar => calendar.next()); // Avanzar al siguiente día en todos los calendarios
      });
    });
  </script>